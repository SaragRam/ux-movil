<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alarmas.AlarmasActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toTopOf="@+id/tableLayout"
        app:srcCompat="@drawable/fondo_media"
        tools:layout_editor_absoluteX="9dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/mis_alarmas"
        android:textColor="@color/azul_oscuro"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botonAñadirAlarma"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="añadirAlarma"
        android:textStyle="bold"
        android:text="@string/añadir_alarma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_border"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/botonAñadirAlarma">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/celda_border">

            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:text="@string/nombre"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:padding="8dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:text="@string/estado"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/acciones"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="8dp"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/celda_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:00 AM"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penicilina Cama 40"
                    android:textColor="@color/azul_electrico"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <Switch
                android:id="@+id/switch1"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:thumbTint="@drawable/selector_thumb"
                android:trackTint="@drawable/selector_track"
                android:background="@drawable/switch_border"
                android:padding="8dp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:src="@drawable/editar"
                    android:layout_marginVertical="2dp"
                    android:padding="8dp"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:src="@drawable/eliminar"
                    android:layout_marginVertical="2dp"
                    android:padding="8dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/celda_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 AM"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacitación"
                    android:textColor="@color/azul_electrico"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <Switch
                android:id="@+id/switch2"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:thumbTint="@drawable/selector_thumb"
                android:trackTint="@drawable/selector_track"
                android:background="@drawable/switch_border"
                android:padding="8dp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:src="@drawable/editar"
                    android:layout_marginVertical="2dp"
                    android:padding="8dp"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:src="@drawable/eliminar"
                    android:layout_marginVertical="2dp"
                    android:padding="8dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/celda_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00 AM"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examen Cama 60"
                    android:textColor="@color/azul_electrico"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <Switch
                android:id="@+id/switch3"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:thumbTint="@drawable/selector_thumb"
                android:trackTint="@drawable/selector_track"
                android:background="@drawable/switch_border"
                android:padding="8dp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:src="@drawable/editar"
                    android:layout_marginVertical="2dp"
                    android:padding="8dp"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:src="@drawable/eliminar"
                    android:layout_marginVertical="2dp"
                    android:padding="8dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/celda_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3:00 PM"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cirugía Sala 3"
                    android:textColor="@color/azul_electrico"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <Switch
                android:id="@+id/switch4"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:thumbTint="@drawable/selector_thumb"
                android:trackTint="@drawable/selector_track"
                android:background="@drawable/switch_border"
                android:padding="8dp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:src="@drawable/editar"
                    android:layout_marginVertical="2dp"
                    android:padding="8dp"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:src="@drawable/eliminar"
                    android:layout_marginVertical="2dp"
                    android:padding="8dp"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navFragmentAlarmas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>